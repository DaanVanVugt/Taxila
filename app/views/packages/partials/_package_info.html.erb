<ul class="unstyled nav-simple">
  <!-- Package  -->
  <li><h4 class="nav-heading">Package</h4></li>
  <li style="padding: 7px 20px;">
    <p>
      <%= (image_tag(package.image.url, :class => "medium-content-provider-logo")) %>
    </p>
    <h5>
      <%= package.title %>
    </h5>
    <% unless package.description.blank? %>
        <p class="minimise">
          <%= package.description %>
        </p>
    <% end %>
  </li>
  <li><h4 class="nav-heading">Owner</h4></li>
  <li style="padding: 7px 20px;">
    <%= package.user.username %>
    <% if package.user.profile.firstname or package.user.profile.surname %>
        <%= "(" + "#{package.user.profile.firstname} #{package.user.profile.surname}".strip + ")" %>
    <% end %>
  </li>
  <li><h4 class="nav-heading">Keywords</h4></li>
  <li style="padding: 7px 20px;">
    <% if not package.keywords.blank? %>
        <% package.keywords.each do |keyword| %>
            <span class="keyword-pill"><%= keyword %></span>
        <% end %>
    <% else %>
        <p class="empty">None</p>
    <% end %>
  </li>
</ul>
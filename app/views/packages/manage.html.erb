<%- model_class = Package -%>
<div class="row wrapper">

  <!-- SIDEBAR -->
  <div class="col-md-3 col-xs-3" id="sidebar">
    <%= render :partial => "packages/partials/general_package_info" %>
  </div>

  <div class="col-md-9 col-xs-9">
    <div class="page-header">
      <h2><%=t '.title', :default => [:'helpers.titles.manage', 'Manage %{model}'], :model => model_class.model_name.human.titleize.downcase %></h2>
    </div>
    <div class="row">
      <%= form_tag(controller: 'packages', action: 'update_package_resources', method: 'post') do |f| %>
          <label>Add materials</label>
          <%= render :partial => 'packages/partials/dropdown_option', :locals => {:field_name => 'material', :package => @package} %>

          <label> Add events</label>
          <%= render :partial => 'packages/partials/dropdown_option', :locals => {:field_name => 'event', :package => @package} %>

          <button type="submit" value="add" class="btn btn-primary">Update package</button>
      <% end %>
    </div>
  </div>
</div>
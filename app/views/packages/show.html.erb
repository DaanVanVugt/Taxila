<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @package.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @package.description %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @package.image_url %>
</p>

<p>
  <strong>Public:</strong>
  <%= @package.public %>
</p>


<p>
<strong>Contents: </strong> This package contains <%= pluralize(@package.materials.count, 'material') %> and <%= pluralize(@package.events.count, 'event') %>
  <br>
  <br>

  <strong>Materials</strong>
<% @package.materials.each do |material| %>
	<%= render material %> 
<% end %>
  <strong>Events</strong>
  <% @package.events.each do |event| %>
      <%= render event%>
  <% end %>


</p>

<%= link_to 'Edit', edit_package_path(@package) %> |
<%= link_to 'Back', packages_path %>

<%- model_class = Package -%>
<div class="page-header">
  <%= image_tag(@package.image_url, :class=>'logo-right') %>
  <h1><%=t '.title', :default => @package.name%></h1>
  <% if @package.keywords and !@package.keywords.empty? %>
    Keywords: <%= @package.keywords.join(', ') %>
  <% end %>
</div>

<div class="show-page-description ">
  <%= @package.description %>
</div>

<p>
  <strong>This package contains <%= pluralize(@package.materials.count, 'material') %> and <%= pluralize(@package.events.count, 'event') %></strong>
  <br>
  <br>

  <ul class=" media-grid">
      <h3>Materials</h3>
      <% @package.materials.each do |material| %>
          <%= render material %>
      <% end %>
  </ul>
  <ul class="masonry media-grid">
    <h3>Events</h3>
      <% @package.events.each do |event| %>
          <%= render event%>
      <% end %>
  </ul>
</p>


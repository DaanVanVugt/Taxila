<p id="notice"><%= notice %></p>

<%- model_class = Package -%>
<div class="page-header">
  <%= image_tag(@package.image_url, :class=>'logo-right') %>
  <h1><%=t '.title', :default => @package.name%></h1>
</div>

<div class="show-page-description ">
  <%= @package.description %>
</div>

<p>
  <strong>This package contains <%= pluralize(@package.materials.count, 'material') %> and <%= pluralize(@package.events.count, 'event') %></strong>
  <br>
  <br>

  <strong>Materials</strong>
  <% @package.materials.each do |material| %>
      <%= render material %>
  <% end %>
  <strong>Events</strong>
  <% @package.events.each do |event| %>
      <%= render event%>
  <% end %>
</p>



<%= link_to t('.back', :default => t("helpers.links.back")),
            package_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_package_path(@package), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            package_path(@package),
            :method => 'delete',
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-danger' %>

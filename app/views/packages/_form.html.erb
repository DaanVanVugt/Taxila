<div class="row">
  <div class="col-md-9 col-xs-9">
    <%= simple_form_for @package, :html => { :class => "form-horizontal content_provider" } do |f| %>
        <% if @package.errors.any? %>
            <div id="error_expl" class="panel panel-danger">
              <div class="panel-heading">
                <h3 class="panel-title"><%= pluralize(@package.errors.count, "error") %> prohibited this package from
                  being saved:</h3>
              </div>
              <div class="panel-body">
                <ul>
                  <% @package.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            </div>
        <% end %>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, :class => 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, :class => 'form-control', :rows => '10' %>
        </div>
        <div class="form-group">
          <%= f.label :image_url, label: 'Image URL' %>
          <%= f.text_field :image_url, :class => 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :public, :class=>"checkbox inline" %>
          <%= f.check_box :public %>
        </div>

        <%= render :partial => 'common/multiple_input',
                   :locals => {:field_name => 'keywords',
                               :resource => @package,
                               :f => f,
                               :suggestions => raw(TeSS::AutocompleteManager.suggestions_array_for('keywords').to_json)} %>

        <div class="form-group actions">
          <%= f.submit ( f.object.new_record? ? "Create" : "Update") + " package", :class => 'btn btn-primary' %>
          <%= link_to 'Back', packages_path, :class=>"btn btn-info" %>
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                      packages_path, :class => 'btn btn-default' %>
        </div>
    <% end %>
  </div>
</div>
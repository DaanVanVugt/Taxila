<div class="row">
  <div class="col-md-9 col-xs-9">
    <%= simple_form_for @package, :html => { :class => "form-horizontal content_provider" } do |f| %>

        <% if @package.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@package.errors.count, "error") %> prohibited this package from being saved:</h2>
              <ul>
                <% @package.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :description %><br>
          <%= f.text_area :description, :class => 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :image_url %><br>
          <%= f.text_field :image_url, :class => 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :public, :class=>"checkbox inline" %>
          <%= f.check_box :public %>
        </div>

        <%= render :partial => 'common/multiple_input', :locals => {:field_name => 'keywords', :resource => @package, :f => f} %>

        <div class="form-group actions">
          <%= f.submit ( f.object.new_record? ? "Create" : "Update") + " package", :class => 'btn btn-primary' %>
          <%= link_to 'Back', packages_path, :class=>"btn btn-info" %>
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                      package_path, :class => 'btn btn-default' %>
        </div>
    <% end %>
  </div>
</div>
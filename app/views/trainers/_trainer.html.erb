<div class="list-card" style="width: 100%;">

  <div class="dont-break-out">
    <div class="row" style='margin: 0'>
      <div class='col-md-10' style='margin: 0; padding: 0;'>
        <%= link_to trainer.full_name, trainer, class: 'list-card-heading' %>
        <div class="text-justify">
          <p><%= truncate trainer.description, length: 300, separator: ' ' %></p>
        </div>

        <div class='' style='margin-top: 6px;'>
          <%= display_attribute(trainer, :location) %>
          <%= display_attribute(trainer, :experience) %>
          <%= display_attribute(trainer, :language) { |values| values.join(', ') } %>
          <%= display_attribute(trainer, :expertise_academic) { |values| values.join(', ') } %>
          <%= display_attribute(trainer, :expertise_technical) { |values| values.join(', ') } %>
        </div>
      </div>

      <div class='col-md-1 pull-right' style='margin: 10px; padding: 0;'>
        <% if trainer.user.gravatar_url.nil? %>
          <%= image_tag 'dresa/Trainers_Default.png', class: 'small-trainer-logo', style: 'margin: 0; padding: 0;' %>
        <% else %>
          <%= image_tag trainer.user.gravatar_url,  class: 'small-trainer-logo', style: 'margin: 0; padding: 0;'%>
        <% end %>
      </div>
    </div>
  </div>
</div>

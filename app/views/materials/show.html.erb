<div class="row">
  <div class="col-md-2 col-xs-3">
    <%= render :partial=> "sidebar" %>
  </div>
  <div class=" col-md-10 col-xs-9">

    <%- model_class = Material -%>
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
    </div>

    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
      <dd><%= @material.title %></dd>
      <dt><strong>URL:</strong></dt>
      <dd><%= link_to @material.url, @material.url %></dd>
      <dt><strong><%= model_class.human_attribute_name(:short_description) %>:</strong></dt>
      <dd><%= @material.short_description %></dd>
      <dt><strong><%= model_class.human_attribute_name(:long_description) %>:</strong></dt>
      <dd><%= @material.long_description %></dd>
      <dt><strong><%= model_class.human_attribute_name(:scientific_topic) %>:</strong></dt>
      <dd><%= @material.scientific_topic %></dd>
      <dt><strong><%= model_class.human_attribute_name(:target_audience) %>:</strong></dt>
      <dd><%= @material.target_audience %></dd>
      <dt><strong><%= model_class.human_attribute_name(:keywords) %>:</strong></dt>
      <dd><%= @material.keywords %></dd>
      <dt><strong><%= model_class.human_attribute_name(:licence) %>:</strong></dt>
      <dd><%= licence_name_for_abbreviation(@material.licence) %></dd>
      <dt><strong><%= model_class.human_attribute_name(:difficulty_level) %>:</strong></dt>
      <dd><%= @material.difficulty_level %></dd>
      <dt><strong><%= model_class.human_attribute_name(:authors) %>:</strong></dt>
      <dd><%= @material.authors.blank? ? 'N/A' : @material.authors %></dd>
      <dt><strong><%= model_class.human_attribute_name(:contributors) %>:</strong></dt>
      <dd><%= @material.contributors.blank? ? 'N/A' : @material.contributors %></dd>
      <dt><strong>DOI:</strong></dt>
      <dd><%= @material.doi %></dd>
      <dt><strong>Created:</strong></dt>
      <dd><%= @material.remote_created_date %></dd>
      <dt><strong>Last updated:</strong></dt>
      <dd><%= @material.remote_updated_date %></dd>
    </dl>

    <%= link_to t('.back', :default => t("helpers.links.back")),
                materials_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_material_path(@material), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                material_path(@material),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>

  </div>
</div>
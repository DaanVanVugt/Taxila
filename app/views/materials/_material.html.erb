<div class="list-group-item">
  <div class="list-group-item-heading"><%= link_to(material.title, material, class: "btn btn-default btn-block") %></div>
  <div>
    <p><%= truncate(material.short_description, length: 300, separator: ' ') %></p>
    <div class="row" style="margin: 0px;">
      <div class="col-md-10" style="padding: 0px;">
        <p><b>Keywords: </b><%= material.keywords.join(', ') %></p>
        <p><b>Scientific topics: </b><%= material.scientific_topic.blank? ? "none" : material.scientific_topic.map{|x| x.preferred_label}.join(', ') %></p>
      </div>
      <div class="col-md-2">
        <%= html_logo_for(material.content_provider,'pull-right small-content-provider-logo').html_safe %>
      </div>
    </div>
  </div>
  <!--<#%= link_to '', material, :class=>"media-view"%>-->
  <!--<#%= link_to '', material, :class=>"media-view"%>-->
</div>



<div class="list-group-item">
  <div class="list-group-item-heading"><%= link_to(material.title, material, class: "btn btn-default btn-block") %></div>
  <div class="dont-break-out">
    <p class>
      <%= scrape_status_icon(material) if current_user and current_user.is_admin? %>
      <%= suggestion_icon(material) if current_user and current_user.is_admin? -%>
      <%= truncate(material.short_description, length: 300, separator: ' ') %>
    </p>
    <div class="row" style="margin: 0px;">
      <% if controller_name != 'content_providers' %>
          <div class="col-md-9" style="padding: 0px;">
            <%= display_attribute(material, :scientific_topics){|values| values.map{|x| x.preferred_label}.join(', ')} %>
            <%= display_attribute(material, :keywords){|values| values.join(', ')} %>
            <%= display_attribute(material, :resource_type){|values| values.join(', ')} %>


            <% unless material.edit_suggestion.nil? or material.edit_suggestion.scientific_topics.empty? %>
                <div class="suggestions">
                  <b>Suggested scientific topics:</b>
                  <% material.edit_suggestion.scientific_topics.each do |scientific_topic, i| %>
                  <span class="dropdown ">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                      <%= scientific_topic.preferred_label %>
                      <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu suggestion_action"
                        data-resource_type="materials"
                        data-resource_id="<%=material.id%>"
                        data-topic="<%=scientific_topic.preferred_label%>"
                        aria-labelledby="dropdownMenu1">
                      <li><a class="btn accept_suggestion" ><b>✓ Accept</b> <br>(This material <b>is</b> about <em><%=scientific_topic.preferred_label%></em>)</a></li>
                      <li><a class="btn reject_suggestion" ><b>✗ Reject</b> <br> (This material <b>is not</b> about <em><%=scientific_topic.preferred_label%></em>)</a></li>
                    </ul>
                  </span>
                  <% end %>
                </div>
            <% end %>
          </div>
          <div class="col-md-3">
            <% if material.content_provider %>
              <%= link_to material.content_provider, :class=>"pull-right" do %>
                  <%= image_tag(material.content_provider.image.url, :class => "small-content-provider-logo") %>
              <% end %>
            <% end %>
            <!-- TODO Add node logo as well, if material's provider  belongs to a node -->
          </div>
      <% else %>
          <div class="col-md-12" style="padding: 0px;">
            <%= display_attribute(material, :scientific_topics){|values| values.map{|x| x.preferred_label}.join(', ')} %>
            <%= display_attribute(material, :keywords){|values| values.join(', ')} %>
            <%= display_attribute(material, :resource_type){|values| values.join(', ')} %>
          </div>
      <% end %>
    </div>
  </div>
  <%= render :partial => 'materials/partials/material_schemaorg', :locals => {:material => material} %>
  <!--<#%= link_to '', material, :class=>"media-view"%>-->
  <!--<#%= link_to '', material, :class=>"media-view"%>-->
</div>



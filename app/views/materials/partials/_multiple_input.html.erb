<!--
field_name - the name of the array attribute in its plural form e.g. author, keyword.
-->

<div class="form-group">
  <%= f.label field_name.to_sym %>
  <div class="<%=field_name.singularize%> multiple-input-list">
    <% field_values = material.send(field_name.to_sym) %>
    <% field_values = [''] if field_values.blank? %> <!-- Add one placeholder if field's values is an empty array -->
    <% field_values.each do |val| %>
        <div class="multiple-list-item">
             <input type="text"
                    class="multiple-input form-control"
                    data-field='<%= field_name.singularize %>'
                    name="material[<%= field_name %>][]"
                    value="<%= val %>"/>
          <input type="button"
                 value='<%= "&times;".html_safe %>'
                     class="multiple-input-delete"
                 data-field="<%= field_name.singularize %>"/>
        </div>
    <% end %>
  </div>
  <a class="btn btn-info"><i class="fa fa-plus multiple-input-add" data-field="<%=field_name.singularize%>"> Add <%= field_name.singularize %></i></a>
  <%#= error_span(material.send(field_name)) %>
</div>
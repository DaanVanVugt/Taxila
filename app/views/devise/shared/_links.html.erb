<div class="btn-group-vertical" role="group" >
  <%- if controller_name != 'sessions' %>
      <div class="text-align: left;">
        <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-link"  %>
      </div>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <div class="text-align: left;">
        <%= link_to "Register", new_registration_path(resource_name), class: "btn btn-link" %>
      </div>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <div class="text-align: left;">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-link"  %>
      </div>
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <div class="text-align: left;">
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn btn-link"  %>
      </div>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <div class="text-align: left;">
        <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn btn-link"  %>
      </div>
  <% end -%>

  <%- if devise_mapping.omniauthable? %>
      <div class="text-align: left;">
        <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "Log in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "btn btn-link"  %>
            </div>
        <% end -%>
  <% end -%>
</div>

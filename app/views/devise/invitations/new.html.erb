<div class="account-form">
  <div class="page-header">
    <%= page_title t('devise.invitations.new.header') %>
  </div>
  <div class="form-middle" id="content">
    <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <% resource.class.invite_key_fields.each do |field| -%>
        <div class="form-inputs">
          <%= f.input field %>
        </div>
      <% end -%>
      <div class="actions">
        <%= f.button :submit, t("devise.invitations.new.submit_button"), class: 'btn btn-primary'%>
        <%= link_to invitees_path, class: 'btn btn-default' do %>Cancel<% end %>
      </div>
    <% end %>
  </div>
</div>

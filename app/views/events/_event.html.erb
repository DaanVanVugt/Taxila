<li class="masonry-brick media-item">
  <h3 class="media-heading"><%= event.title %></h3>
    <!--<p><button class="btn btn-success"><a href="<%= event.link %>">View Event <span class="fa fa-external-link" aria-hidden="true"></span></a></button> </p>-->
    <p><%= neatly_printed_date_range(event.start, event.end) %></p>
    <p><%= [event.venue, event.city, event.country].reject { |field_value| field_value.empty? }.join(", ")%></p>
    <%= link_to '', event, :class=>"media-view" %>
</li>
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <%- model_class = Event -%>
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>

      Search Events
      <%= form_tag events_path, :method => :get do %>
          <p>
            <%= text_field_tag :q, params[:q] %>
            <%= submit_tag "Search", :name => nil %>

          </p>
      <% end %>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>

Where
<% @selected_facets.each do |category, value| %>
    <% if value.is_a?(Array)%> <% value = value.join('</b> and <b>') %><% end %>
    <%= "<b>#{category.humanize}</b> is <b>#{value}</b>, ".html_safe %>
<% end %>
<div class="row">
  <div class="col-md-3">
    <table class="table table-striped">
      <% @facet_fields.each do |facet_field| %>
          <% if @events.facet(facet_field).rows.count > 0 %>
              <tr><td class="h4"><%= facet_field.humanize %></td> </tr>
              <% @events.facet(facet_field).rows.each do |facet| %>
                  <tr>
                    <td><%= filter_link(facet_field, facet.value) %></td>
                    <td><%= facet.count %></td>
                  </tr>
              <% end %>
          <% end %>
      <% end %>
    </table>
  </div>

  <div class="col-md-9">
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_event_path,
                :class => 'btn btn-primary' %>

    <table class="table table-striped">
      <thead>
      <tr>
        <!--<th><%#= model_class.human_attribute_name(:id) %></th>-->
        <th><%= model_class.human_attribute_name(:title) %></th>
        <th><%= model_class.human_attribute_name(:link) %></th>
        <th>URL</th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
      </thead>
      <tbody>
      <% @events.results.each do |event| %>
          <tr>
            <!--<td><%#= link_to event.id, event_path(event) %></td>-->
            <td><%= link_to event.title, event_path(event) %></td>
            <td><%= event.link %></td>
            <td><%= link_to "Event source", event.link %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_event_path(event), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          event_path(event),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>
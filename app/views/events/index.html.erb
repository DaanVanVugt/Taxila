      <!--<#%= render event %>-->
      <!--<#% end %>-->
      <!--</div>-->

      <!-- Alternative Map view -->
      <!--<div id="map-content" class="tab-content">-->
      <!--<#%= render :partial => "map_view", :locals => {:events => @events} %>-->
      <!--</div>-->
  <% end %>
  </div>
</div>

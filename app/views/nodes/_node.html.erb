<li class="masonry-brick media-item ">
  <%= image_tag get_image_url_for(node), :class=>"media-image listing_image" %>
  <h3 class="media-heading"><%= country_flag(node.country_code, class: 'small-flag') %> <%= node.name %></h3>
  <p>
    <strong class="text-primary"><%= 'Training coordinator'.pluralize(node.training_coordinators.length) -%>: </strong><br>
    <%= node_staff_list(node.training_coordinators, false) %>
  </p>
  <%= link_to '', node, :class=>"media-view"%>
</li>

<%= form_for(@node) do |f| %>
  <% if @node.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@node.errors.count, "error") %> prohibited this node from being saved:</h2>

      <ul>
      <% @node.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
    
  <div class="form-group">
    <%= f.label :member_status %>
    <%= f.text_field :member_status, class: 'form-control' %>
  </div>
    
  <div class="form-group">
    <%= f.label :country_code %>
    <%= f.text_field :country_code, class: 'form-control' %>
  </div>
    
  <div class="form-group">
    <%= f.label :home_page %>
    <%= f.text_field :home_page, class: 'form-control' %>
  </div>
    
  <div class="form-group">
    <%= f.label :institutions %>
    <%= f.text_field :institutions, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :twitter %>
    <%= f.text_field :twitter, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :carousel_images %>
    <%= f.text_field :carousel_images, class: 'form-control' %>
  </div>

  <label>Staff</label> <%= add_node_staff_button(f, '#staff-list') %>
  <div class="staff-form" id="staff-list">
    <% @node.staff.each do |staff_member| %>
      <%= render partial: 'staff_form', locals: { form: f, staff_member: staff_member } %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                @node.new_record? ? nodes_path : node_path(@node), :class => 'btn btn-default' %>
  </div>
<% end %>

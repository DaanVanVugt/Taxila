<%= simple_form_for(@node) do |f| %>
    <% if @node.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@node.errors.count, "error") %> prohibited this node from being saved:</h2>

          <ul>
            <% @node.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :country_code, "Country" %>
      <%= select_tag('node[country_code]', options_for_select(countries_options_for_select(), @node.country_code), :class => "form-control")  %>
    </div>

    <div class="form-group">
      <%= f.label :member_status %>
      <%= f.select :member_status, Node::MEMBER_STATUS, {}, {:class => "form-control"} %>
    </div>

    <div class="form-group">
      <%= f.label :home_page %>
      <%= f.text_field :home_page, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.markdown_area :description, class: 'form-control', rows: "10" %>
    </div>

    <div class="form-group">
      <%= f.label :twitter %>
      <%= f.text_field :twitter, class: 'form-control' %>
    </div>

    <%#= render :partial => 'common/multiple_input', :locals => {:field_name => 'institutions',
                                                                :resource => @node,
                                                                :f => f} %>


    <%#= render :partial => 'common/multiple_input', :locals => {:field_name => 'carousel_images',
                                                                :resource => @node,
                                                                :f => f} %>


    <label>Staff</label><br/>
    <%= add_node_staff_button(f, '#staff-list') %>
    <div class="staff-form" id="staff-list">
      <% @node.staff.each do |staff_member| %>
          <%= render partial: 'staff_form', locals: {form: f, staff_member: staff_member} %>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.submit ( f.object.new_record? ? "Register" : "Update") + " node", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  @node.new_record? ? nodes_path : node_path(@node), :class => 'btn btn-default' %>
    </div>
<% end %>

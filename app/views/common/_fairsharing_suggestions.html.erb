<%= collapsible_panel('Suggested policies, standards and databases to associate with this resource', 'external-resources-box-fairsharing') do %>

    <input type="hidden" id='title_element' value="<%=title_element%>">

    <div class="input-group">
      <%= text_field_tag(nil, nil, class: 'form-control', id: 'fairsharing_query',
                         placeholder: 'Search fairsharing.org', 'data-fairsharing-endpoint': fairsharing_search_path) %>
      <div class="input-group-btn">
        <span class="btn btn-default" id="search_fairsharing"><i class="fa fa-search"></i></span>
      </div>
    </div>

    <div class="bs-type-selectors">
      Type
      <ul>
        <li><label><input class="bstype" type="radio" name="bs_types[]" value="any" checked/> Any</label></li>
        <li><label><input class="bstype" type="radio" name="bs_types[]" value="database"/> Databases</label></li>
        <li><label><input class="bstype" type="radio" name="bs_types[]" value="standard"/> Standards</label></li>
        <li><label><input class="bstype" type="radio" name="bs_types[]" value="policy" /> Policies</label></li>
      </ul>
    </div>

    <div class="row bounding-box">
      <div class="tool-suggestions-header">
        <em>Data provided by <a href="https://fairsharing.org">FAIRsharing</a></em>
        <div>Click the <i class="fa fa-plus-square-o"></i> button to add a tool as an external resource.</div>
      </div>

      <div id="fairsharing-endpoint" style="display: none;"><%= Rails.application.secrets.fairsharing_api_key -%></div>
      <div id="fairsharing-next" style="display: none;"></div>
      <div id="fairsharing-previous" style="display: none;"></div>
      <%= image_tag('loading42.gif', class: 'loading_image', id: 'loading-spinner') -%>
      <div id="fairsharing-results"></div>

      <br/>

      <div class="load-more-results">
        <i id="prev-bs-button" class="btn btn-primary pull-left" style="display: none;">Previous</i>
        <i id="next-bs-button" class="btn btn-primary pull-right" style="display: none;">Next</i>
      </div>
    </div>
<% end %>
<% opts = {} %>
<% opts['data-url-check'] = url if f.object.new_record? %>
<% opts['data-url-valid'] = test_url_path %>
<% opts['title'] = title unless title.nil? %>
<% opts['placeholder'] = title unless title.nil? %>

<div class="form-group">
  <%= f.input :url, as: :string, hint: ' ', field_lock: f.object.respond_to?(:locked_fields), input_html: opts %>
</div>

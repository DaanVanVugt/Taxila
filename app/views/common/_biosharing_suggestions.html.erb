<%= collapsible_panel('Suggested policies, standards and databases to associate with this resource', 'external-resources-box-biosharing') do %>

    <input type="hidden" id='title_element' value="<%=title_element%>">

    <div class="input-group">
      <input type="text" class="form-control" id="biosharing_query" placeholder="Search biosharing.org"/>
      <div class="input-group-btn">
        <span class="btn btn-default" id="search_biosharing"><i class="fa fa-search"></i></span>
      </div>
      <br/>
    </div>

    <div class="bs-type-selectors">
      <ul>
        <li><input class="bstype" type="checkbox" name="bs_types[]" value="biodbcore" checked/> Databases</li>
        <li><input class="bstype" type="checkbox" name="bs_types[]" value="standard" checked/> Standards</li>
        <li><input class="bstype" type="checkbox" name="bs_types[]" value="policy" /> Policies</li>
      </ul>
    </div>


    <div class="row bounding-box">
      <div class="tool-suggestions-header">
        <em>Data provided by <a href="https://biosharing.org">BioSharing</a></em>
        <div>Click the <i class="fa fa-plus-square-o"></i> button to add a tool as an external resource.</div>
      </div>

      <div id="biosharing-api-key" style="display: none;"><%= Rails.application.secrets.biosharing_api_key -%></div>
      <div id="biosharing-next" style="display: none;"></div>
      <div id="biosharing-previous" style="display: none;"></div>
      <div id=loading-spinner">
        <%= image_tag('loading42.gif', :class => 'loading_image') -%>
      </div>
      <div id="biosharing-results">
      </div>
      <br>

      <div class="load-more-results">
        <i id="prev-bs-button" class="btn btn-primary pull-left">Previous</i>
        <i id="next-bs-button" class="btn btn-primary pull-right">Next</i>
      </div>
    </div>
<% end %>
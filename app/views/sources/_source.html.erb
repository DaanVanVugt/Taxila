<div class="masonry-brick media-item long">
  <h3 class="media-heading">
    <%= get_source_title source %>
    <%= resource_type_icon source %>
  </h3>
  <div class="text-justify" style="display: inline-block; word-break: normal;">
    <% source.results.nil? ? rcount = 0 : rcount = source.results.size %>
    <%= "#{pluralize(rcount, 'run', plural: 'runs')} found for URL: #{source.url}" %>
  </div>
  <%= link_to '', source, :class => "media-view" %>
</div>
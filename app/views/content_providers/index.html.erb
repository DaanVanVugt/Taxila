<script>
    $(document).ready(function(){
        $('.masonry').masonry({
            // options...
            itemSelector: '.masonry-brick',
            columnWidth: 20
        });
    })
</script>

<%- model_class = ContentProvider -%>
<div class="page-header">
  <h1><%=t '.title', :default => pluralize(@content_providers.count, model_class.to_s.titleize)%> Found</h1>
<!-- CREATE NEW BUTTON -->
  <%= link_to new_content_provider_path, :class=>"btn btn-primary" do %>
      <i class="fa fa-plus-square"></i> Create Content Provider
  <% end %>
</div>


<ul class="masonry media-grid">
    <% @content_providers.each do |content_provider|  %>
          <%= render content_provider %>
    <% end %>
</ul>
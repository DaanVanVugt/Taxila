<%# Sidebar containing info on content provider.

Variable that should be available
- content_provider - content provider being displayed
%>

<ul class="unstyled nav-simple">
  <% if content_provider.blank? %>
      <p class="alert alert-info empty" style="margin: 10px;">
        No content provider available
      </p>
  <% else %>
      <!-- Content provider  -->
      <li><h4 class="nav-heading">Content provider</h4></li>
      <li style="padding: 7px 25px;">
        <p>
          <%= link_to(image_tag(get_content_provider_logo_url(content_provider), :class=>"medium-content-provider-logo"), content_provider) %>
        </p>
        <p>
          <%= link_to content_provider.title, content_provider, :class=>"h5" %>
        </p>
        <% unless content_provider.description.blank?  %>
            <p>
              <%= truncate(content_provider.description, length: 500, separator: ' ') %>
            </p>
        <% end %>
      </li>
  <% end %>
</ul>

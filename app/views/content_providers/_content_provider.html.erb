<li class="masonry-brick media-item ">
    <%= image_tag content_provider.image.url(:media), :class=>"media-image listing_image" %>
    <h3 class="media-heading"><%= content_provider.title %></h3>
    <!--<p><%= content_provider.url %></p>-->
    <p><%= truncate(content_provider.description, length: 100, separator: ' ') %></p>
    <p style="margin-bottom: 0px;">
      <% if content_provider.materials.count > 0 %>
          <div><strong><%= pluralize(content_provider.materials.count, 'training material') %></strong></div>
      <% end %>
      <% if content_provider.events.count > 0 %>
      <div><strong><%= pluralize(content_provider.events.count, 'event') %></strong></div>
      <% end %>
    </p>
    <%= link_to '', content_provider, :class=>"media-view"%>
</li>


<li class="masonry-brick media-item ">
     <%= image_tag get_image_url_for(content_provider), :class=>"media-image listing_image" %>
    <h3 class="media-heading"><%= content_provider.title %></h3>
    <!--<p><%= content_provider.url %></p>-->
    <p><%= truncate(content_provider.description, length: 100, separator: ' ') %></p>
    <p style="margin-bottom: 0px;">
      <strong><%= pluralize(content_provider.materials.count, 'training material') %></strong><br/>
      <strong><%= pluralize(content_provider.events.count, 'event') %></strong>
    </p>
    <%= link_to '', content_provider, :class=>"media-view"%>
</li>


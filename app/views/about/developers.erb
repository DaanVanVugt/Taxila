<div class="wrapper">

  <div id="content" class="">
    <div class="about-block">

<!--      <div class="breadcrumb">-->
        <%#= render :partial => 'links', :locals => { 'show': 'developer' } %>
<!--      </div>-->
      <!-- ABOUT TESS DATA -->
      <div class="row">
        <div>
          <h2 id='code_and_data'>For Developers</h2>
          <br>

          <%== raw t 'developer.license' %>
          <div class="row">
            <div class="col-lg-5 5 open-access-box">
              <div class="h3 licence-title">Software</div>
              <div class="open-access-location">
                  <div class="register-condition-graphic">
                    <%= image_tag 'about/GitHub-Mark-64px.png', class: "" %>
                  </div>
                  <div class="register-condition">The
                    <%= link_to TeSS::Config.site['repository'], target: '_blank' do %>
                      source code<i class="icon icon-md arrow-top-right-icon"></i><% end %>
                      for <%= TeSS::Config.site['title_short'] %>
                    is available on GitHub
                  </div>
              </div>
              <div class="open-access-licence">
                  <div class="register-condition-graphic"><i class="fa fa-code licence-logo"></i></div>
                  <div class="register-condition">Source code is available under the
                    <%== raw t 'developer.code_license' %> license
                  </div>
              </div>
            </div>
            <div class="col-lg-5 open-access-box">
              <div class="h3 licence-title">Data</div>
                <div class="open-access-location">
                  <div class="register-condition-graphic"><i class="fa fa-plug licence-logo"></i></div>
                  <div class="register-condition">
                    Data in <%= TeSS::Config.site['title_short'] %> can be accessed via
                    <%= link_to developers_path(:anchor => 'api') do %>our API<% end %>
                  </div>
                </div>
              <div class="open-access-licence">
                <div class="register-condition-graphic"><i class="fa fa-database licence-logo"></i></div>
                  <div class="register-condition">Data are made available under the
                      <%== raw t 'developer.data_license' %>
                    license
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Widgets -->
      <div class="row">
        <div class="even-about-block">
          <div class="h3" id="widgets">Widgets</div>
          <p><%== raw t 'developer.widgets' %></p>
          <p><%= link_to t('developer.widgets_available'), class: 'btn btn-primary', target: '_blank' do %>
              View Our Available Widgets
            <% end %></p>
          <%= render :partial => 'about/' + TeSS::Config.site['widget_example'] %>
          <%== raw t 'developer.widgets_mailing' %>
        </div>
      </div>

      <!-- API -->
      <div class="row">
        <div class="odd-about-block">
          <div class="h3" id="api">API</div>
          <span>
            <p><%= TeSS::Config.site['title_short'] %> has a fully functioning
              <a href="http://jsonapi.org/" target="_blank">JSON API<i class="icon icon-md arrow-top-right-icon"></i></a>.
              You can explore our JSON-API by appending .json_api to the end of the URL of most pages
              (excluding parameters). For example:</p>

            <!-- Events -->
            <% if TeSS::Config.feature['events'] %>
            <p><code>
               <a href="<%= TeSS::Config.base_url %><%== raw t 'developer.api_example_1' %>">
                 <%= TeSS::Config.base_url %><%== raw t 'developer.api_example_1' %></a>
            </code></p>
            <% end %>

            <!-- Materials -->
            <% if TeSS::Config.feature['materials'] %>
            <p><code>
               <a href="<%= TeSS::Config.base_url %><%== raw t 'developer.api_example_3' %>">
                 <%= TeSS::Config.base_url %><%== raw t 'developer.api_example_3' %> </a>
            </code></p>
            <% end %>

            <!-- Providers -->
            <% if TeSS::Config.feature['providers'] %>
            <p><code>
               <a href="<%= TeSS::Config.base_url %><%== raw t 'developer.api_example_4' %>">
                               <%= TeSS::Config.base_url %><%== raw t 'developer.api_example_4' %> </a>
            </code></p>
            <% end %>

            <!-- Workflows -->
            <% if TeSS::Config.feature['workflows'] %>
            <p><code>
               <a href="<%= TeSS::Config.base_url %><%== raw t 'developer.api_example_5' %>">
                               <%= TeSS::Config.base_url %><%== raw t 'developer.api_example_5' %> </a>
            </code></p>
            <% end %>

            <%== raw t 'developer.swaggerhub' -%>
           </span>
        </div>
      </div>
    </div>
    <hr>
    <%= render :partial => 'links', :locals => { 'show': 'developer' } %>
  </div>

  <div id="sidebar" class="popout-sidebar">
    <%= render :partial => 'about_nav', locals: { show: 'developers' } %>
  </div>
</div>
</div>
</body>

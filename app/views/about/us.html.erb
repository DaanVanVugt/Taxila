<div class="wrapper">
  <div id="sidebar" class="popout-sidebar">
    <%= render :partial => 'about_nav', locals: { show: 'us' } %>
  </div>

  <div id="content" class="">
    <div class="about-block">
      <%= render :partial => 'links', :locals => { 'show': 'about' } %>

      <% @feature_count = 0 %>

      <!-- TeSS Club-->
      <div class="row">
        <div class="<%= next_about_block(@feature_count += 1) %>">
          <div id='tess-club' class="h3">TeSS Club</div>
          <div class="sub-about-block">
            <p>Fortnightly meetings, hackathons, shared activities, open priority setting, open contribution to unite the community.</p>
            <p>The TeSS Club runs fortnightly at 9:00 GMT / 10:00 CET Friday.</p>
            <p>For all the details please visit the <a href="https://elixirtess.github.io/about/">TeSS Club Website</a>.</p>
          </div>
        </div>
      </div>

      <!-- CONTACT-->
      <div class="row">
        <div class="<%= next_about_block(@feature_count += 1) %>">
          <div id='contact' class="h3">Contact</div>
          <div class="sub-about-block">
            <%== raw t 'us.contact' %>
          </div>
        </div>
      </div>

      <!-- FUNDING-->
      <section id="funding">
        <div class="row">
          <div class="<%= next_about_block(@feature_count += 1) %>">
            <div id='funding' class="h3">Funding</div>
            <p>European Commission, Horizon 2020 Research Infrastructures programme (ELIXIR-EXCELERATE, <a href="https://cordis.europa.eu/project/rcn/198519_en.html" target="_blank">grant agreement number 676559</a>);</p>
            <p>ELIXIR Implementation Study (Registry Integration from a User Perspective);</p>
            <p>ELIXIR Implementation Study (Learning Paths).</p>
            <p>BBSRC UK (Delivering ELIXIR-UK grant, grant agreement numbers <a href="https://bbsrc.ukri.org/research/grants/grants/AwardDetails.aspx?FundingReference=BB/L005050/1" target="_blank">BB/L005050/1</a> &amp; <a href="https://bbsrc.ukri.org/research/grants-search/AwardDetails/?FundingReference=BB/L005069/1" target="_blank">BB/L005069/1</a>).</p>
            <p></p>
               <p>
                  <%= link_to 'https://cordis.europa.eu/project/rcn/198519_en.html', target: '_blank' do %>
                      <%= image_tag('eu_flag.svg', {class: "funding-logo"}) %>
                  <% end %>
                  <%= link_to 'http://www.elixir-europe.org/excelerate', target: '_blank' do %>
                    <%= image_tag('excelerate-logo.png', {class: "funding-logo"}) %>
                  <% end %>
                 <%= link_to 'https://bbsrc.ukri.org/research/grants/grants/AwardDetails.aspx?FundingReference=BB/L005050/1', target: '_blank' do %>
                     <%= image_tag('elixir_logo_orange.png', {class: "funding-logo"}) %>
                 <% end %>
                 <%= link_to 'https://bbsrc.ukri.org/research/grants/grants/AwardDetails.aspx?FundingReference=BB/L005050/1', target: '_blank' do %>
                     <%= image_tag('bbsrc-logo.png', {class: "funding-logo"}) %>
                 <% end %>
                </p>
          </div>
        </div>
      </section>

      <!-- THE TEAM-->
      <section id="team">
        <div class="row">
          <div class="<%= next_about_block(@feature_count += 1) %>">
            <div id='team' class="h3">The Team</div>
            <%== raw t 'us.team.description' %>
            <%== raw t 'us.team.develop' %>
            <%== raw t 'us.team.working' %>
            <%== raw t 'us.team.partner' %>
            <%= render :partial => 'about/partner_orgs' %>
            <%== raw t 'us.team.guidance' %>
          </div>
        </div>
      </section>

      <!-- ACKNOWLEDGEMENTS-->
      <section id="acknowledgements">
        <div class="row">
          <div class="<%= next_about_block(@feature_count += 1) %>">
            <div id='acknowledgments' class="h3">Acknowledgements</div>
            <%== raw t 'us.acknowledge' %>
          </div>
        </div>
      </section>

      <!-- Cite -->
      <div class="row">
        <div class="<%= next_about_block(@feature_count += 1) %>">
          <div id='cite' class="h3">Cite Us</div>
          <div class="sub-about-block">
            Niall Beard, Finn Bacall, Aleksandra Nenadic, Milo Thurston, Carole A Goble, Susanna-Assunta Sansone, Teresa K Attwood, TeSS: a platform for discovering life-science training opportunities, Bioinformatics, Volume 36, Issue 10, 15 May 2020, Pages 3290-3291, <a href="https://doi.org/10.1093/bioinformatics/btaa047">https://doi.org/10.1093/bioinformatics/btaa047</a>
          </div>
        </div>
      </div>

    </div>
    <%= render :partial => 'links', :locals => { 'show': 'about' } %>
  </div>
</div>

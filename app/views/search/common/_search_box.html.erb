
<%#
Parameters
- resource_path - the path to the route to perform the search e.g. materials_path, events_path
%>
<div class="resource_search_box">
  <%= form_tag resource_path, :method => :get do %>
    <p>
      <%= text_field_tag :q, params[:q], :class=>'search_box_large', :placeholder => "Enter search term..." %>
      <%= button_tag(:type => "submit", :class => "btn btn-default") do %>
          <i class="fa fa-search"></i>
      <% end %>
    </p>
  <% end %>
</div>

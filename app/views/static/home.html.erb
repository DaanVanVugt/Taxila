<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "WebSite",
  "name": "<%= TeSS::Config.site['title_short'] -%>",
  "alternateName": "<%= TeSS::Config.site['title'] -%>",
  "url": "<%= root_url %>",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "<%= search_url(q: 'QUERY').sub('QUERY', '{search_term_string}') -%>",
    "query-input": "required name=search_term_string"
  }
}
</script>

<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "Organization",
  "url": "<%= root_url -%>",
  "logo": "<%= image_url TeSS::Config.site['logo'] -%>"
}
</script>

<section>
  <%# Welcome text %>
  <div class="welcome-text">
    <h1 class="module-heading"><%== raw t 'home.welcome' %></h1>
    <p class="font-size-lg"><%== raw t 'home.subtitle' %></p>
  </div>

  <%# Big search box %>
  <div class="searchbox">
    <%= form_tag search_path, method: :get, role: 'search' do %>
      <div class="searchbox-wrapper">
        <input type="text" class="searchbox-field" name="q"
               placeholder="Search <%= TeSS::Config.site['title_short'] %>..." autofocus="autofocus">
        <button type="submit" class="searchbox-btn">
          <i class="icon icon-h3 search-icon"></i>
        </button>
      </div>
    <% end %>
  </div>
</section>

<section>
  <h2 class="text-center">Browse the catalogue</h2>

  <%# Feature buttons %>
  <ul class="catalogue">
    <% ['events', 'materials', 'workflows'].each do |feature| %>
      <% if TeSS::Config.feature[feature] == true %>
        <li>
          <a class="link-overlay" href="<%= polymorphic_path(feature) %>">
            <div>
              <%= image_tag(asset_path("modern/icons/#{feature}-icon.svg"), alt: feature.titleize) %>
              <h3><%= feature.titleize %></h3>
            </div>

          <p><%== raw t "home.#{feature}_message" %></p>

            <span>
              <span class="pseudolink">
                Start browsing
              </span>&nbsp;<i class="icon icon-sm arrow-right-icon"></i>
            </span>

          </a>
        </li>
      <% end %>
    <% end %>
  </ul>
</section>



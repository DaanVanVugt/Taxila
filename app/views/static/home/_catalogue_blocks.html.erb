<% features = ['events', 'materials', 'workflows', 'trainers'].select { |f| TeSS::Config.feature[f] } %>

<section id="catalogue">
  <h2 class="text-center">Browse the catalogue</h2>

  <ul class="catalogue<%= ' catalogue-even' if features.count.even? %>">
    <% features.each do |feature| %>
      <li class="resource-type">
        <a class="link-overlay" href="<%= polymorphic_path(feature) %>">
          <div class="resource-type-title">
            <%= image_tag(asset_path("modern/icons/#{feature}-icon.svg"), alt: feature.titleize) %>
            <h3><%= feature.titleize %></h3>
          </div>

          <div class="resource-type-text"><%== raw t "home.catalogue.#{feature}" %></div>

          <div class="resource-type-link">
              <span class="pseudolink">
                Start browsing
              </span>&nbsp;<i class="icon icon-sm arrow-right-icon"></i>
          </div>
        </a>
      </li>
    <% end %>
  </ul>
</section>

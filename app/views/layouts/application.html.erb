<!DOCTYPE html>
<html>
<head>
  <title>TeSS - Training eSupport System</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Navigation bar -->
<%= nav_bar static: :top, brand: "TeSS", responsive: true do %>
    <!--<%= menu_text "Training eSupport System" %>-->
    <%= menu_group do %>
        <%= menu_item "Materials", materials_path %>
        <%= menu_item "Packages", packages_path %>
        <%= menu_item "Workflows", workflows_path %>
        <%= menu_item "Content Providers", content_providers_path %>
        <%= menu_item "Nodes", nodes_path %>
        <%= menu_item "Events", events_path %>
    <% end %>
    <% if current_user %>
        <%= menu_group pull: :right do %>
            <%= menu_item "Profile", user_path(current_user) %>
            <%= menu_item "Sign out", destroy_user_session_path, :method => :delete %>
        <% end %>
    <% else %>
        <%= menu_group pull: :right do %>
            <%= menu_item "Sign In", new_user_session_path %>
            <%= menu_item "Sign Up", new_user_registration_path %>
        <% end %>
    <% end %>
<% end %>


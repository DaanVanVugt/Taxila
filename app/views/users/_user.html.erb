<li class="masonry-brick media-item">
  <%= link_to user, class: 'link-overlay no-padding clearfix' do %>
    <%= image_tag user.avatar_url, class: 'user-list-avatar', size: '100' %>
    <h4><%= user.username %></h4>
    <% if user.profile %>
      <p><%= user.profile.full_name %></p>
    <% end %>
  <% end %>
</li>
<div id="content">
  <div class="page-header">
    <h2><%= t '.title', default: 'Invited Users' %></h2>
  </div>

  <div class="content-actions">
    <div class="content-manager-actions">
      <!-- buttons -->
      <%= link_to new_user_invitation_path, class: 'btn btn-primary' do %>
        <i class="fa fa-envelope-square"></i> Invite User by Email
      <% end %>
    </div>
  </div>

  <table class="table">
    <thead>
    <th scope="col">Email</th>
    <th scope="col">Last Sent at</th>
    <th scope="col">Sent by</th>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.invitation_sent_at %></td>
        <td><%= user.get_inviter %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


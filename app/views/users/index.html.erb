<div class="page-header">
  <h2><%= t '.title', default: 'Users' %></h2>
</div>

<!-- Register button -->
<% if TeSS::Config.feature['invitation'] && (current_user.try(:is_admin?) || current_user.try(:is_curator?)) %>
  <div class="pull-right">
    <%= link_to 'Invitees', invitees_path, class: 'btn btn-default align-self-end' %>
  </div>
<% end %>

<div class="search-results-count my-3">
  <%= pluralize(@users.count, 'user') %>
</div>

<div class="users-list">
  <%= render partial: 'common/masonry_grid', locals: { objects: @users } %>
</div>

<%= render partial: 'search/common/pagination_bar', locals: { resources: @users } %>
